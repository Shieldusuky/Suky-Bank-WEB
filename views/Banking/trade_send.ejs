<%- include("common/header") %>

<script type="text/javascript">
    function tradeSend() {
        var membership = "<%= pending.data.membership %>";
        $('input[name=ceiling]').attr('value', membership);

        document.getElementById('send').submit()
    }
</script>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">송금하기</h6>
    </div>
    <div class="card-body">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">송금</h1>
        </div>
        <form id="send" class="send" action="/bank/send/post" method="POST" name="send">
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">

                    <%- html %>

                </div>
                <div class="col-sm-6">
                    <input type="text" class="form-control form-control-user" id="exampleLastName" name="amount" placeholder="금액">
                    </input>
                </div>
            </div>
            <input type="hidden" id="ceiling" name="ceiling" value="망한값" />

            <a onclick="tradeSend()" class="btn btn-primary btn-user btn-block" id="submitbutton">
                송금
            </a>
            <hr>
        </form>
        <hr>
    </div>
</div>

<%- include("common/footer") %>


                    
                