<%- include("common/header") %>

<script>
    window.onload = function () {
        <% if(locals.message){ %>
        alert("<%= message %>")
        <% } %>
    }

    function maxLengthCheck(object){
    if (object.value.length > object.maxLength){
      object.value = object.value.slice(0, object.maxLength);
    }    
  }
</script>

<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
    }
</style>

<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a href="/">Home</a></li>
                <li>비밀번호 찾기</li>
            </ol>
            <h2>사용자 인증</h2>

        </div>
    </section><!-- End Breadcrumbs -->

    <section class="inner-page contact">
        <div class="container">
            <div class="col-lg-7 mt-5 mt-lg-0 d-flex justify-content-center" style="margin:0 auto;">
                <form method="post" action="/user/smsAuth" role="form" class="php-email-form">

                    <div class="form-group">
                        <label for="name">ID</label>
                        <input type="text" class="form-control" name="username" id="username" required>
                    </div>
                    <div class="form-group">
                        <label for="name">인증번호</label>
                        <input type="number" class="form-control" name="authnum" id="authnum" maxlength="4" oninput="maxLengthCheck(this)" required>
                    </div>
                    <div class="text-center">
                        <div class="text-center">
                            &emsp;&emsp;&emsp; <button style="width: 40%;" type="submit">변경</button> &emsp;&emsp;&emsp;
                        </div>
                    </form>
                    </div>
                </form>
            </div>
        </div>
    </section>

</main><!-- End #main -->

<%- include("common/footer") %>